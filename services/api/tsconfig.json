{
    "compilerOptions": {
        "target": "es6",
        "lib": ["ES2020"],
        "strictNullChecks": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "sourceMap": true,
        "removeComments": true,
        "declaration": true,
        "moduleResolution": "node",
        "typeRoots": ["@types"],
        "types": ["@types/node", "@types/jest", "jest"],
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*", ".eslintrc.js"]
}
