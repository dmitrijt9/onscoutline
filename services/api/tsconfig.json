{
    "compilerOptions": {
        "experimentalDecorators": true,
        "inlineSources": false,
        "module": "commonjs",
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "./dist",
        "sourceMap": true,
        "target": "ES2020",
        "emitDecoratorMetadata": true,
        "lib": ["ES2020"],
        "esModuleInterop": true,
        "typeRoots": ["@types"]
    },
    "include": ["src/**/*", ".eslintrc.js"]
}
